<h1>All Products</h1>

<p><%= link_to 'New Product', new_product_path %></p>

<% @products.each do |product| %>
  <section>
    <h3><%= link_to product.name, product_path(product) %></h3>
    <p><%= product.description %></p>
    <%= image_tag product.image_filename, :class => "food_menu_image" %>
  </section>
<% end %>
